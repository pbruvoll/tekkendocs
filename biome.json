{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "linter": {
    "rules": {
      "style": {
        "useImportType": {
          "level": "error",
          "options": {
            "style": "inlineType"
          }
        }
      },
      "correctness": {
        "useUniqueElementIds": "warn"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noShadowRestrictedNames": "warn"
      }
    }
  }
}
